{
    "compilerOptions": {
        "outDir": "./lib/",
        "sourceMap": true,
        "strict": true,
        "noImplicitReturns": true,
        "experimentalDecorators": true,
        "strictPropertyInitialization": false,
        "noImplicitAny": false,
        "module": "es6",
        "moduleResolution": "node",
        "target": "es5",
        "allowJs": true
    },
    "include": ["./src/*"]
}
